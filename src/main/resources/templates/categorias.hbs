{{#partial "contenido"}}
    <div>
        <h2 class="text-center">Categorias</h2>
        <a class="btn btn-primary float-right btnEntidades" href="/categorias/nueva" role="button">Cargar Categor√≠a</a>
        <table class="table table-striped table-hover" style="width:100%">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>

            </tr>
            </thead>
            <tbody>
            {{#if hayResultados}}
                {{#each categorias}}
                    <tr>
                        <td>{{id}} </td>
                        <td>{{nombre}}</td>
                    </tr>
                {{/each}}
            {{else}}
                <td colspan="2" class="text-center">No hay resultados</td>
            {{/if}}
            </tbody>
        </table>
    </div>

{{/partial}}

{{>layout.hbs}}