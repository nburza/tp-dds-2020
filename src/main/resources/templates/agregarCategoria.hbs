{{#partial "contenido"}}
    <h1 class="text-center">Cargar Categor√≠a</h1>
    <div>
        <form class="formulario" method="POST" action="/entidades/asignarCategoria">
            <select id="inputDocComercial" class="form-control" name="categoriaSeleccionada">
                <option selected>categoria</option>
                {{#each categorias}}
                    <option value="{{nombre}}"> {{nombre}} </option>
                {{/each}}
            </select>

            <select id="inputDocComercial" class="form-control" name="entidadSeleccionada">
                <option selected>entidad</option>
                {{#each entidades}}
                    <option value="{{nombreFicticio}}"> {{nombreFicticio}} </option>
                {{/each}}
            </select>
            <div class="form-group">
                <button type="submit" class="btn btn btn-primary btn-block" data-loading-text="Uniendo..."></i>Unir</button>
            </div>
        </form>
    </div>

{{/partial}}

