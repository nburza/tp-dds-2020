{{#partial "contenido"}}

    <div>
        <h2>Organizacion {{idOrganizacion}}</h2><br>
        <a class="btn btn-primary" href="/entidades/nueva" role="button">Nueva entidad</a>
        <a class="btn btn-primary" href="/entidades/asignarCategoria" role="button">Asignar categoria</a>

        <div>
            <form action="/entidades" method="GET">
                <label for="categoriaFiltrada">Buscar por categoria</label>
                <select id="categoriaFiltrada" name="categoriaFiltrada">
                    {{#each categorias}}
                        <option value={{nombre}}>{{nombre}}</option>
                    {{/each}}
                </select>
                <input type="submit" value="Buscar">
            </form>
        </div>
        <table class="table table-striped" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre Ficticio</th>
                    <th scope="col">Razon Social</th>
                    <th scope="col">Tipo</th>
                    <th scope="col" class="text-center">Cant Entidades Asignadas</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each entidades}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{nombreFicticio}}</td>
                    <td>{{razonSocial}}</td>
                    <td>{{tipo}}</td>
                    <td class="text-center">
                    {{#if this.esJuridica}}
                        {{cantidadDeEntidadesAsignadasComoString}}
                    {{/if}}
                    </td>
                    <td>
                    {{#if this.esJuridica}}
                        <a class="btn btn-outline-primary" href="/entidades/{{id}}/entidadesBase/asignar" role="button">Asignar m√°s</a>
                    {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

{{/partial}}

{{>layout.hbs}}