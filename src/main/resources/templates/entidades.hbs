{{#partial "contenido"}}
    <div>
        <h2 class="text-center">Entidades</h2><br>
        <a class="btn btn-primary btnEntidades float-right" href="/entidades/nueva" role="button">Cargar entidad</a>

        <div>
            <form action="/entidades" method="GET">
                <label for="categoriaFiltrada">Buscar por categoria</label>
                <select id="categoriaFiltrada" name="categoriaFiltrada">
                    {{#with categoriaFiltrada}}
                        <option hidden value="{{id}}">{{nombre}}</option>
                    {{/with}}
                    {{#each categorias}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/each}}
                </select>
                <input class="btn btn-primary" type="submit" value="Buscar">
            </form>
        </div>
        <table class="table table-striped table-hover" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre Ficticio</th>
                    <th scope="col">Razon Social</th>
                    <th scope="col">Tipo</th>
                    <th scope="col" class="text-center">Cant Entidades Asignadas</th>
                    <th scope="col">Acci√≥nes</th>
                </tr>
            </thead>
            <tbody>
            {{#if hayResultados}}
                {{#each entidades}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{nombreFicticio}}</td>
                        <td>{{razonSocial}}</td>
                        <td>{{tipo}}</td>
                        <td class="text-center">
                            {{#if this.puedeContenerEntidades}}
                                {{cantidadDeEntidadesAsignadasComoString}}
                            {{/if}}
                        </td>
                        <td>
                            {{#if this.puedeContenerEntidades}}
                                <a class="btn btn-primary" href="/entidades/{{id}}/entidadesBase/asignado" role="button" title="Asignar Entidades">
                                    <strong>+ </strong><i class="fas fa-building"></i>
                                </a>
                            {{/if}}
                            <a class="btn btn-primary" href="/entidades/{{id}}/categorias/asignado" role="button" title="Asignar Categorias">
                                <strong>+ </strong><i class="fas fa-address-book"></i>
                            </a>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <td colspan="6" class="text-center">No hay resultados</td>
            {{/if}}
            </tbody>
        </table>
    </div>

{{/partial}}

{{>layout.hbs}}