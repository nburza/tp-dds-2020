{{#partial "contenido"}}
    <h1 class="text-center">Cargar Usuario</h1>
    <div>
        <form class="formulario" method="POST" action="/usuarios">
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label>Nombre usuario</label>
                </div>
                <div class="form-group col">
                    <input name="usuario" class="form-control" placeholder="usuario" type="text" maxlength="64" value="{{nombreValue}}" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label>Contraseña</label>
                </div>
                <div class="form-group col">
                    <input name="password" class="form-control" placeholder="contraseña" type="password" maxlength="64" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label>Organización</label>
                </div>
                <div class="form-group col">
                    <select id="organizaciones" name="organizaciones">
                        {{#each organizacion}}
                            <option value="{{id}}">{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn btn-primary btn-block" data-loading-text="Creando..."></i>Crear</button>
            </div>
        </form>
    </div>

{{/partial}}

{{>layout.hbs}}