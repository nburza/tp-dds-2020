{{#partial "contenido"}}

    <div>
        <form method="POST" action="/entidades">
            <div class="form-group">
                <label>Nombre Ficticio</label><input name="nombreFicticio" class="form-control" type="text" maxlength="64">
            </div>
            <div class="form-group">
                <label>Razon social</label><input name="razonSocial" class="form-control" type="text" maxlength="64">
            </div>
            <div class="form-group">
                <label for="categorias">Categorias</label>
                <select id="categorias" name="categorias" size="4" multiple>
                    {{#each categorias}}
                        <option value={{nombre}}>{{nombre}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn btn-outline-primary btn-block" data-loading-text="Creando..."><i class="fas fa-sign-in-alt"></i>Crear</button>
            </div>
        </form>
    </div>

{{/partial}}

{{>layout.hbs}}